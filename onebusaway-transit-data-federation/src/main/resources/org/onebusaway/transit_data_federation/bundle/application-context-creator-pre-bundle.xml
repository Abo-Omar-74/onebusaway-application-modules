<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

    <import resource="classpath:org/onebusaway/transit_data_federation/bundle/application-context-creator-common.xml" />
    <import resource="classpath:org/onebusaway/transit_data_federation/application-context-common.xml" />

    <!-- Task Definitions -->

    <bean id="modifications" class="org.onebusaway.transit_data_federation.model.modifications.Modifications" />

    <bean id="task_gtfs" class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="gtfs" />
        <property name="task" ref="loadGtfsTask" />
    </bean>

    <bean id="loadGtfsTask" class="org.onebusaway.transit_data_federation.bundle.tasks.LoadGtfsTask" />

    <bean id="task_route_collections" class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="route_collections" />
        <property name="afterTaskName" value="gtfs" />
        <property name="task" ref="routeCollectionsTask" />
    </bean>

    <bean id="routeCollectionsTask" class="org.onebusaway.transit_data_federation.bundle.tasks.GenerateRouteCollectionsTask" />

    <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="route_search_index" />
        <property name="afterTaskName" value="route_collections" />
        <property name="task" ref="routeCollectionsSearchIndexTask" />
    </bean>

    <bean id="routeCollectionsSearchIndexTask" class="org.onebusaway.transit_data_federation.bundle.tasks.GenerateRouteCollectionSearchIndexTask" />

    <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="stop_search_index" />
        <property name="afterTaskName" value="route_search_index" />
        <property name="task" ref="stopSearchIndexTask" />
    </bean>

    <bean id="stopSearchIndexTask" class="org.onebusaway.transit_data_federation.bundle.tasks.GenerateStopSearchIndexTask" />

    <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="calendar_service" />
        <property name="afterTaskName" value="stop_search_index" />
        <property name="task" ref="calendarServiceTask" />
    </bean>

    <bean id="calendarServiceTask" class="org.onebusaway.transit_data_federation.bundle.tasks.CalendarServiceDataTask" />

    <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="narratives" />
        <property name="afterTaskName" value="calendar_service" />
        <property name="task" ref="narrativesTask" />
    </bean>

    <bean id="narrativesTask" class="org.onebusaway.transit_data_federation.bundle.tasks.GenerateNarrativesTask" />

    <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="walk_graph" />
        <property name="afterTaskName" value="narratives" />
        <property name="task" ref="walkGraphTask" />
    </bean>
    
    <bean id="walkGraphTask" class="org.onebusaway.transit_data_federation.impl.walkplanner.offline.WalkPlannerGraphTask" />

    <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="trip_graph" />
        <property name="afterTaskName" value="narratives" />
        <property name="task" ref="tripGraphTask" />
    </bean>

    <bean id="tripGraphTask" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.TripPlannerGraphTaskImpl" />

    <bean id="tripPlannerGraphImpl" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.TripPlannerGraphImpl" />
    <bean id="transitGraphDaoImpl" class="org.onebusaway.transit_data_federation.impl.TransitGraphDaoImpl" />

    <!-- These are needed by the trip graph task -->
    <bean id="distanceAlongShapeLibrary" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.DistanceAlongShapeLibrary" />
    <bean id="blockEntriesFactory" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.BlockEntriesFactory" />
    <bean id="blockConfigurationEntriesFactory" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.BlockConfigurationEntriesFactory" />
    <bean id="stopEntriesFactory" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.StopEntriesFactory" />
    <bean id="stopTimeEntriesFactory" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.StopTimeEntriesFactory" />
    <bean id="tripEntriesFactory" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.TripEntriesFactory" />
    <bean id="serviceIdOverlapCache" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.ServiceIdOverlapCache" />
    <bean id="shapePointsTemporaryService" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.ShapePointsTemporaryService"/>
    <bean id="uniqueServiceImpl" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.UniqueServiceImpl" />

    <bean id="tripPlannerGraphRefresh" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.TripPlannerGraphRefresh" />

    <!-- The initial calendar task produces the data necessary to power the CalendarService, but subsequent tasks need access 
        to the data, so we provide a lazy-factory-init instance of the service -->
    <bean id="calendarServiceImpl" class="org.onebusaway.gtfs.impl.calendar.CalendarServiceImpl">
        <property name="dataFactory">
            <bean class="org.onebusaway.gtfs.impl.SerializedCalendarServiceDataFactoryImpl">
                <property name="path">
                    <bean factory-bean="bundle" factory-method="getCalendarServiceDataPath" />
                </property>
            </bean>
        </property>
    </bean>

    <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="block_indices" />
        <property name="afterTaskName" value="trip_graph" />
        <property name="task" ref="blockIndicesTask" />
    </bean>

    <bean id="blockIndicesTask" class="org.onebusaway.transit_data_federation.bundle.tasks.block_indices.BlockIndicesTask" />

    <!-- -->

    <!-- <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition"> <property name="taskName" value="stop_transfers" 
        /> <property name="afterTaskName" value="block_indices" /> <property name="taskBeanName"> <idref bean="stopTransfersTask" 
        /> </property> </bean> <bean id="stopTransfersTask" class="org.onebusaway.transit_data_federation.impl.tripplanner.offline.StopTransfersTripPlannerGraphTaskImpl" 
        lazy-init="true"> <property name="blockStopTimeIndicesRefreshTask"> <bean class="org.onebusaway.transit_data_federation.impl.blocks.BlockStopTimeIndexServiceImpl" 
        lazy-init="true" /> </property> </bean> -->

    <bean id="blockIndexServiceImpl" class="org.onebusaway.transit_data_federation.impl.blocks.BlockIndexServiceImpl"
        lazy-init="true" />

    <!-- OTP Graph Builder -->

    <bean class="org.onebusaway.transit_data_federation.bundle.model.TaskDefinition">
        <property name="taskName" value="otp_graph" />
        <property name="afterTaskName" value="block_indices" />
        <property name="taskBeanName">
            <idref bean="otpGraphBuidlerTask" />
        </property>
    </bean>

    <bean id="otpGraphBuidlerTask" class="org.opentripplanner.graph_builder.GraphBuilderTask">
        <property name="graph" ref="otpGraph" />
        <property name="graphBundle" ref="otpGraphBundle" />
        <property name="graphBuilders">
            <list>
                <!-- <ref bean="osmBuilder" /> -->
            </list>
        </property>
        <property name="alwaysRebuild" value="true" />
    </bean>

    <bean id="otpGraph" class="org.opentripplanner.routing.core.Graph" />

    <bean id="osmBuilder" class="org.opentripplanner.graph_builder.impl.osm.OpenStreetMapGraphBuilderImpl">
        <property name="provider" ref="osmProvider" />
    </bean>

    <bean id="osmProvider" class="org.opentripplanner.graph_builder.impl.osm.RegionBasedOpenStreetMapProviderImpl">
        <property name="regionsSource">
            <bean class="org.onebusaway.transit_data_federation.impl.walkplanner.offline.GtfsStopRegionsSourceImpl" />
        </property>
    </bean>

</beans>