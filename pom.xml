<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>onebusaway</artifactId>
        <groupId>org.onebusaway</groupId>
        <version>1.0.6</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.onebusaway</groupId>
    <artifactId>onebusaway-application-modules</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <!-- Common Software Dependency Versions -->
    <properties>
        <struts-version>2.1.8.1</struts-version>

        <!--  These properties are primarily used in configuring joint integration tests -->
        <org.onebusaway.federations_webapp.port>9900</org.onebusaway.federations_webapp.port>
        <org.onebusaway.federations_webapp.ajp_port>9901</org.onebusaway.federations_webapp.ajp_port>
        <org.onebusaway.federations_webapp.rmi_port>9902</org.onebusaway.federations_webapp.rmi_port>

        <org.onebusaway.transit_data_federation_webapp.port>9905</org.onebusaway.transit_data_federation_webapp.port>
        <org.onebusaway.transit_data_federation_webapp.ajp_port>9906</org.onebusaway.transit_data_federation_webapp.ajp_port>
        <org.onebusaway.transit_data_federation_webapp.rmi_port>9907</org.onebusaway.transit_data_federation_webapp.rmi_port>

        <org.onebusaway.api_webapp.port>9910</org.onebusaway.api_webapp.port>
        <org.onebusaway.api_webapp.ajp_port>9911</org.onebusaway.api_webapp.ajp_port>
        <org.onebusaway.api_webapp.rmi_port>9912</org.onebusaway.api_webapp.rmi_port>

        <org.onebusaway.sms_webapp.port>9915</org.onebusaway.sms_webapp.port>
        <org.onebusaway.sms_webapp.ajp_port>9916</org.onebusaway.sms_webapp.ajp_port>
        <org.onebusaway.sms_webapp.rmi_port>9917</org.onebusaway.sms_webapp.rmi_port>

        <org.onebusaway.phone_webapp.port>9920</org.onebusaway.phone_webapp.port>
        <org.onebusaway.phone_webapp.ajp_port>9921</org.onebusaway.phone_webapp.ajp_port>
        <org.onebusaway.phone_webapp.rmi_port>9922</org.onebusaway.phone_webapp.rmi_port>

        <org.onebusaway.webapp.port>9925</org.onebusaway.webapp.port>
        <org.onebusaway.webapp.ajp_port>9926</org.onebusaway.webapp.ajp_port>
        <org.onebusaway.webapp.rmi_port>9927</org.onebusaway.webapp.rmi_port>
    </properties>

    <repositories>
        <repository>
            <id>releases.developer.onebusaway.org</id>
            <url>http://developer.onebusaway.org/maven/repository/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>snapshots.developer.onebusaway.org</id>
            <url>http://developer.onebusaway.org/maven/snapshot-repository/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>releases.developer.onebusaway.org</id>
            <url>http://developer.onebusaway.org/maven/repository/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>snapshots.developer.onebusaway.org</id>
            <url>http://developer.onebusaway.org/maven/snapshot-repository/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <scm>
        <connection>scm:svn:http://onebusaway.googlecode.com/svn/onebusaway-application-modules/trunk</connection>
        <developerConnection>scm:svn:https://onebusaway.googlecode.com/svn/onebusaway-application-modules/trunk
        </developerConnection>
        <url>http://code.google.com/p/onebusaway/source/browse/#svn/onebusaway-application-modules/trunk</url>
    </scm>

    <modules>
        <module>onebusaway-api-webapp</module>
        <module>onebusaway-cli</module>
        <module>onebusaway-container</module>
        <module>onebusaway-core</module>
        <module>onebusaway-federations</module>
        <module>onebusaway-federations-webapp</module>
        <module>onebusaway-geocoder</module>
        <module>onebusaway-geospatial</module>
        <module>onebusaway-gtfs-hibernate-spring</module>
        <module>onebusaway-integration-tests</module>
        <module>onebusaway-phone</module>
        <module>onebusaway-phone-webapp</module>
        <module>onebusaway-presentation</module>
        <module>onebusaway-sms-webapp</module>
        <module>onebusaway-testing</module>
        <module>onebusaway-transit-data</module>
        <module>onebusaway-transit-data-federation</module>
        <module>onebusaway-transit-data-federation-webapp</module>
        <module>onebusaway-users</module>
        <module>onebusaway-webapp</module>
    </modules>

    <build>
        <!-- This is where we control the master plugin version used by all modules -->
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.4.2</version>
                </plugin>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.5</version>
                    <!-- By default, we exclude anything in the org.onebusaway.integration package from regular unit test -->
                    <configuration>
                        <excludes>
                            <exclude>org/onebusaway/integration/**</exclude>
                        </excludes>
                    </configuration>
                    <executions>
                        <!--
                            Instead, we add a special integration-test execution that runs any tests in the
                            org.onebusaway.integration package
                        -->
                        <execution>
                            <id>integration-tests</id>
                            <phase>integration-test</phase>
                            <goals>
                                <goal>test</goal>
                            </goals>
                            <configuration>
                                <skip>false</skip>
                                <excludes>
                                    <exclude>none</exclude>
                                </excludes>
                                <includes>
                                    <include>org/onebusaway/integration/**/*Test.java</include>
                                </includes>
                                <!-- We also define some test system properties -->
                                <systemPropertyVariables>
                                    <org.onebusaway.federations_webapp.port>${org.onebusaway.federations_webapp.port}</org.onebusaway.federations_webapp.port>
                                    <org.onebusaway.transit_data_federation_webapp.port>${org.onebusaway.transit_data_federation_webapp.port}</org.onebusaway.transit_data_federation_webapp.port>
                                    <org.onebusaway.api_webapp.port>${org.onebusaway.api_webapp.port}</org.onebusaway.api_webapp.port>
                                    <org.onebusaway.phone_webapp.port>${org.onebusaway.phone_webapp.port}</org.onebusaway.phone_webapp.port>
                                    <org.onebusaway.sms_webapp.port>${org.onebusaway.sms_webapp.port}</org.onebusaway.sms_webapp.port>
                                    <org.onebusaway.webapp.port>${org.onebusaway.webapp.port}</org.onebusaway.webapp.port>
                                </systemPropertyVariables>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>2.1-beta-1</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.cargo</groupId>
                    <artifactId>cargo-maven2-plugin</artifactId>
                    <version>1.0.1-beta-3</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>