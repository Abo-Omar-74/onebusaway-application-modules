<?xml version="1.0" encoding="UTF-8"?>
    <!-- RefineViewWidget.ui.xml -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    
    <ui:style>
        .panel {
            margin-top: 1.5em;
            margin-left: 1em;
        }
        .image {
            float: left;
            margin-right: 0.5em;
	    }
        .label {
            font-weight: bold;
            font-size: 1.5em;
            padding-top: 12px;
        }
    </ui:style>
    <ui:with field='res' type='org.onebusaway.webapp.gwt.where_standard.WhereStopFinderStandardResources'/>
    
    <div class="{style.panel}">
        <div class="{style.image}"><img src="{res.appIcon.getURL}" /></div>
        <div class="{style.label}">Where Is<br />Your Bus?</div>
    </div> 
</ui:UiBinder>