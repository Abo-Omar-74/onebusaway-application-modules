<?xml version="1.0" encoding="UTF-8" ?>
<tc:tc-config xmlns:tc="http://www.terracotta.org/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.terracotta.org/schema/terracotta-5.xsd">

    <servers>
        <server>
            <dso-port>${terracotta.port}</dso-port>
            <jmx-port>${terracotta.jmx_port}</jmx-port>
            <data>${terracotta.dir}/server-data</data>
            <logs>${terracotta.dir}/server-logs</logs>
            <statistics>${terracotta.dir}/server-statistics</statistics>
        </server>
    </servers>

    <clients>
        <logs>${terracotta.dir}/client-logs-%i-%(app_name)</logs>
    </clients>

</tc:tc-config>
