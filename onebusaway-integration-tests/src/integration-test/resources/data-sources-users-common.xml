<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver" />
        <property name="url" value="jdbc:hsqldb:hsql://localhost:${hsqldb.port}/org_onebusaway_database_users" />
        <property name="username" value="sa" />
        <property name="password" value="" />
    </bean>

    <bean id="webappHibernateProperties" class="org.onebusaway.container.spring.PropertiesBeanPostProcessor">
        <property name="target" value="hibernateProperties" />
        <property name="properties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
            </props>
        </property>
    </bean>

    <bean class="org.springframework.beans.factory.config.PropertyOverrideConfigurer">
        <property name="properties">
            <props>
                <prop key="cacheManager.cacheManagerName">org.onebusaway.webapp.sharedCacheManager</prop>
            </props>
        </property>
    </bean>

    <!--
        The Geocoder is used in the SMS interface for determining your default search location. The DefaultGeocoderImpl
        doesn't actually do much geocoding... it's just there for testing
    -->
    <bean id="externalGeocoderImpl" class="org.onebusaway.geocoder.impl.FixedGeocoderImpl">
        <property name="lat" value="47.65475043477393" />
        <property name="lon" value="-122.3078727722168" />
        <property name="city" value="Seattle" />
        <property name="state" value="WA" />
        <property name="postalCode" value="98105" />
    </bean>

    <bean id="serviceArea" class="org.onebusaway.presentation.impl.DefaultServiceAreaServiceImpl" />

    <bean class="org.onebusaway.container.spring.OverrideConfigurer">
        <property name="map">
            <map>
                <entry key="ehCacheConfiguration.configLocation" value="classpath:org/onebusaway/container/ehcache-terracotta.xml" />
                <entry key="ehCacheConfiguration.terracottaUrl" value="localhost:${terracotta.port}" />
                
                <entry key="lastSelectedStopServiceCache.overflowToDisk" value="false" />
                <entry key="lastSelectedStopServiceCache.terracottaClustered" value="true" />

                <entry key="userLastAccessTimeServiceCache.overflowToDisk" value="false" />
                <entry key="userLastAccessTimeServiceCache.terracottaClustered" value="true" />

                <entry key="userIndexCache.terracottaClustered" value="true" />
                <entry key="userCache.terracottaClustered" value="true" />
                <entry key="userIndicesCache.terracottaClustered" value="true" />
                <entry key="userRolesCache.terracottaClustered" value="true" />
                <entry key="userRoleCache.terracottaClustered" value="true" />
                <entry key="cacheManager.cacheManagerName" value="org.onebusaway.sharedCacheManager" />
            </map>
        </property>
    </bean>

</beans>
